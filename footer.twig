<footer class="container template-footer">
	<div class="row footer-content">
		<div class="span-4 contact">
			{{widget('content', 'contacttitle', {content: '<h3>Contact</h3>'})|raw}}
			{{widget('profile', 'contactaddress', { 'profileType':'address'})|raw}}
			{{widget('profile', 'contactemail', { 'profileType':'email'})|raw}}
			{{widget('profile', 'footercolumn1profilesocialicons', { 'profileType':'socialicons', 'socialicons':'profile'})|raw}}
		</div>
		<div class="span-4 product-categories">
			{{widget('content', 'productcategoriestitle', {content: '<h3>Location</h3>'})|raw}}
			{{widget('map', 'mapfooter', {'height': '150', 'zoom': '15', 'address': 'profile'})|raw}}
		</div>
		<div class="span-4 pages">
			{{widget('content', 'pagestitle', {content: '<h3>Pages</h3>'})|raw}}
			{{widget('navigation', 'navigationfooter', {})|raw}}
		</div>
	</div>
</footer>